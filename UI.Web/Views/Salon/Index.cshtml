@model List<Entidades.Salon>

@{
    ViewData["Title"] = "Gestión de Salones";
}

<div class="container mt-4">
    <h2>Gestión de Salones</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
  @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Error:</strong> @TempData["Error"]
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Crear" class="btn btn-primary">Agregar Nuevo Salón</a>
        </div>
    </div>

    <!-- Filtros de Precio -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtrar por Precio</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="precioMin" class="form-label">Precio Mínimo</label>
                    <input type="number" class="form-control" id="precioMin" name="precioMin" 
                           value="@ViewBag.PrecioMin" placeholder="Ej: 50000" step="1000">
                </div>
                <div class="col-md-4">
                    <label for="precioMax" class="form-label">Precio Máximo</label>
                    <input type="number" class="form-control" id="precioMax" name="precioMax" 
                           value="@ViewBag.PrecioMax" placeholder="Ej: 500000" step="1000">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Aplicar Filtros</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Mostrando:</strong> @Model.Count salones
        @if (ViewBag.PrecioMin != null || ViewBag.PrecioMax != null)
        {
            <span>con filtros aplicados</span>
        }
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
          <th>ID</th>
<th>Nombre del Salón</th>
    <th>Estado</th>
   <th class="text-end">Monto</th>
     <th>Acciones</th>
  </tr>
        </thead>
        <tbody>
        @foreach (var s in Model)
            {
    <tr>
        <td>@s.IdSalon</td>
  <td>@s.NombreSalon</td>
       <td>
       <span class="badge @(s.Estado == "Disponible" ? "bg-success" : "bg-secondary")">
     @s.Estado
                </span>
    </td>
       <td class="text-end">@s.MontoSalon.ToString("C")</td>
      <td>
       <a asp-action="Editar" asp-route-id="@s.IdSalon" class="btn btn-sm btn-warning">Editar</a>
 <a asp-action="Eliminar" asp-route-id="@s.IdSalon" class="btn btn-sm btn-danger" 
       onclick="return confirm('¿Está seguro de eliminar este salón?')">Eliminar</a>
  </td>
      </tr>
    }
    </tbody>
    </table>
</div>
