@model Entidades.Solicitud

@{
  ViewData["Title"] = "Crear Solicitud";
}

<h2>Crear Nueva Solicitud</h2>

<form asp-action="Crear" method="post">
    <div class="row">
        <div class="col-md-6">
       <div class="form-group mb-3">
    <label asp-for="IdCliente">Cliente:</label>
    <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.Clientes" required>
          <option value="">-- Seleccione un cliente --</option>
      </select>
   <span asp-validation-for="IdCliente" class="text-danger"></span>
      </div>

    <div class="form-group mb-3">
      <label asp-for="FechaDesde">Fecha del Evento:</label>
     <input asp-for="FechaDesde" type="date" class="form-control" required />
    <span asp-validation-for="FechaDesde" class="text-danger"></span>
            </div>
        </div>

  <div class="col-md-6">
     <div class="form-group mb-3">
 <label asp-for="MontoDJ">Monto DJ:</label>
<input asp-for="MontoDJ" type="number" step="0.01" class="form-control" required />
    <span asp-validation-for="MontoDJ" class="text-danger"></span>
      </div>

   <div class="form-group mb-3">
     <label asp-for="MontoSalon">Monto Salón:</label>
      <input asp-for="MontoSalon" type="number" step="0.01" class="form-control" required />
  <span asp-validation-for="MontoSalon" class="text-danger"></span>
    </div>

<div class="form-group mb-3">
        <label asp-for="MontoGastro">Monto Gastronómico:</label>
  <input asp-for="MontoGastro" type="number" step="0.01" class="form-control" required />
 <span asp-validation-for="MontoGastro" class="text-danger"></span>
   </div>

   <div class="form-group mb-3">
     <label asp-for="MontoBarra">Monto Barra:</label>
    <input asp-for="MontoBarra" type="number" step="0.01" class="form-control" required />
     <span asp-validation-for="MontoBarra" class="text-danger"></span>
    </div>

            <div class="form-group mb-3">
    <label asp-for="Estado">Estado:</label>
      <select asp-for="Estado" class="form-control">
     <option value="Pendiente">Pendiente</option>
           <option value="Confirmada">Confirmada</option>
   <option value="Cancelada">Cancelada</option>
  </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
      </div>
        </div>
    </div>

    <div class="mt-3">
     <button type="submit" class="btn btn-success">Crear Solicitud</button>
  <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
  await Html.RenderPartialAsync("_ValidationScriptsPartial");
 }
}
