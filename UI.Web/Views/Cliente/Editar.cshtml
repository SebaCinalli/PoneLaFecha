@model Entidades.Cliente

<h2>Editar Cliente</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="IdCliente" />

    <div>
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" type="text" required />
        <span asp-validation-for="Nombre"></span>
    </div>

    <div>
        <label asp-for="Apellido">Apellido:</label>
        <input asp-for="Apellido" type="text" required />
        <span asp-validation-for="Apellido"></span>
    </div>

    <div>
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" type="email" required />
        <span asp-validation-for="Email"></span>
    </div>

    <div>
        <label asp-for="Telefono">Teléfono:</label>
        <input asp-for="Telefono" type="text" />
        <span asp-validation-for="Telefono"></span>
    </div>

    <div>
        <label asp-for="NombreUsuario">Usuario:</label>
        <input asp-for="NombreUsuario" type="text" required />
        <span asp-validation-for="NombreUsuario"></span>
    </div>

    <div>
        <button type="submit">Guardar Cambios</button>
        <a asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}