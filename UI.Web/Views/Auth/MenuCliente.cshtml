@{
    ViewData["Title"] = "Menú Cliente";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
    <div class="card shadow">
     <div class="card-header bg-primary text-white">
         <h3 class="mb-0">?? Bienvenido, @ViewBag.NombreCompleto</h3>
                </div>
     <div class="card-body">
         <h5>Panel del Cliente</h5>
    <p class="text-muted">Desde aquí puedes gestionar tus solicitudes de eventos.</p>

       <div class="row mt-4">
        <div class="col-md-4 mb-3">
    <div class="card border-primary">
              <div class="card-body text-center">
  <i class="bi bi-calendar-event" style="font-size: 3rem; color: #667eea;"></i>
     <h5 class="card-title mt-3">Mis Solicitudes</h5>
      <p class="card-text">Ver y gestionar mis eventos</p>
        <a asp-controller="Solicitud" asp-action="Index" class="btn btn-primary">Ver Solicitudes</a>
    </div>
   </div>
      </div>

         <div class="col-md-4 mb-3">
     <div class="card border-success">
  <div class="card-body text-center">
             <i class="bi bi-plus-circle" style="font-size: 3rem; color: #28a745;"></i>
        <h5 class="card-title mt-3">Nueva Solicitud</h5>
             <p class="card-text">Crear un nuevo evento</p>
        <a asp-controller="Solicitud" asp-action="Crear" class="btn btn-success">Crear Solicitud</a>
    </div>
      </div>
             </div>

         <div class="col-md-4 mb-3">
               <div class="card border-info">
   <div class="card-body text-center">
             <i class="bi bi-person-circle" style="font-size: 3rem; color: #17a2b8;"></i>
          <h5 class="card-title mt-3">Mi Perfil</h5>
 <p class="card-text">Ver mi información</p>
       <a asp-controller="Cliente" asp-action="Index" class="btn btn-info">Ver Perfil</a>
         </div>
         </div>
            </div>
   </div>

                    <div class="row mt-4">
         <div class="col-md-12 text-center">
    <h6>Servicios Disponibles</h6>
        <div class="btn-group" role="group">
             <a asp-controller="Salon" asp-action="Index" class="btn btn-outline-primary">Salones</a>
       <a asp-controller="Barra" asp-action="Index" class="btn btn-outline-primary">Barras</a>
                  <a asp-controller="Gastronomico" asp-action="Index" class="btn btn-outline-primary">Gastronomía</a>
              <a asp-controller="Dj" asp-action="Index" class="btn btn-outline-primary">DJs</a>
             </div>
     </div>
          </div>
   </div>
        <div class="card-footer text-end">
   <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger">Cerrar Sesión</a>
         </div>
        </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
