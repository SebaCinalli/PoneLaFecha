<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PoneLaFecha</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UI.Web.styles.css" asp-append-version="true" />
</head>
<body>
  <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
      <div class="container-fluid">
       <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PoneLaFecha</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
          aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
   </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
   <ul class="navbar-nav flex-grow-1">
    @if (Context.Session.GetString("UsuarioId") != null)
             {
     <li class="nav-item">
     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
         </li>
           
      @if (Context.Session.GetString("Rol") == "Administrador")
          {
          <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Index">Clientes</a>
      </li>
       <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Salon" asp-action="Index">Salones</a>
           </li>
        <li class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Barra" asp-action="Index">Barras</a>
        </li>
      <li class="nav-item">
              <a class="nav-link text-dark" asp-area="" asp-controller="Gastronomico" asp-action="Index">Gastronomico</a>
      </li>
      <li class="nav-item">
   <a class="nav-link text-dark" asp-area="" asp-controller="Dj" asp-action="Index">DJs</a>
  </li>
            <li class="nav-item">
   <a class="nav-link text-dark" asp-area="" asp-controller="Zona" asp-action="Index">Zonas</a>
      </li>
    <li class="nav-item">
           <a class="nav-link text-dark" asp-area="" asp-controller="Solicitud" asp-action="Index">Solicitudes</a>
        </li>
                   }
else
      {
               <li class="nav-item">
         <a class="nav-link text-dark" asp-area="" asp-controller="Solicitud" asp-action="Index">Mis Solicitudes</a>
          </li>
   <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Solicitud" asp-action="Crear">Nueva Solicitud</a>
        </li>
        }
               }
    </ul>

             @if (Context.Session.GetString("UsuarioId") != null)
        {
      <ul class="navbar-nav">
    <li class="nav-item dropdown">
         <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
   @Context.Session.GetString("NombreCompleto")
           </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
          <li><span class="dropdown-item-text"><strong>Rol:</strong> @Context.Session.GetString("Rol")</span></li>
           <li><hr class="dropdown-divider"></li>
     <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Cerrar Sesión</a></li>
     </ul>
            </li>
        </ul>
        }
     </div>
            </div>
   </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
      </main>
    </div>

    <footer class="border-top footer text-muted">
     <div class="container">
          &copy; 2025 - PoneLaFecha - Sistema de Gestión de Eventos
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
 <script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
