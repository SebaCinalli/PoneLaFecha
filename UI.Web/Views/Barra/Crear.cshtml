@model Entidades.Barra

@{
    ViewData["Title"] = "Agregar Barra";
}

<h2>Agregar Nueva Barra</h2>

<form asp-action="Crear" method="post">
    <div class="form-group mb-3">
        <label asp-for="Nombre">Nombre:</label>
     <input asp-for="Nombre" type="text" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TipoBebida">Tipo de Bebida:</label>
 <input asp-for="TipoBebida" type="text" class="form-control" required />
   <span asp-validation-for="TipoBebida" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PrecioPorHora">Precio por Hora:</label>
  <input asp-for="PrecioPorHora" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="PrecioPorHora" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Estado">Estado:</label>
 <select asp-for="Estado" class="form-control">
   <option value="Disponible">Disponible</option>
    <option value="Reservado">Reservado</option>
    <option value="Mantenimiento">Mantenimiento</option>
        </select>
<span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
   <label asp-for="Descripcion">Descripción:</label>
        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
   <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="mt-3">
     <button type="submit" class="btn btn-success">Agregar Barra</button>
   <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
 </div>
</form>

@section Scripts {
  @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
