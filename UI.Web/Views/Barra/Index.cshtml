@model IEnumerable<Entidades.Barra>

@{
    ViewData["Title"] = "Barras";
}

<div class="container mt-4">
    <h2>Gestión de Barras</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Crear" class="btn btn-primary">Agregar Nueva Barra</a>
        </div>
    </div>

    <!-- Filtros de Precio -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtrar por Precio</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="precioMin" class="form-label">Precio Mínimo (por hora)</label>
                    <input type="number" class="form-control" id="precioMin" name="precioMin" 
                           value="@ViewBag.PrecioMin" placeholder="Ej: 5000" step="1000">
                </div>
                <div class="col-md-4">
                    <label for="precioMax" class="form-label">Precio Máximo (por hora)</label>
                    <input type="number" class="form-control" id="precioMax" name="precioMax" 
                           value="@ViewBag.PrecioMax" placeholder="Ej: 50000" step="1000">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Aplicar Filtros</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Mostrando:</strong> @Model.Count() barras
        @if (ViewBag.PrecioMin != null || ViewBag.PrecioMax != null)
        {
            <span>con filtros aplicados</span>
        }
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
             <th>ID</th>
         <th>Nombre</th>
          <th>Tipo de Bebida</th>
         <th class="text-end">Precio por Hora</th>
        <th>Estado</th>
        <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var barra in Model)
       {
      <tr>
              <td>@barra.IdBarra</td>
         <td>@barra.Nombre</td>
       <td>@barra.TipoBebida</td>
      <td class="text-end">@barra.PrecioPorHora.ToString("C")</td>
    <td>
         <span class="badge @(barra.Estado == "Disponible" ? "bg-success" : "bg-secondary")">
      @barra.Estado
         </span>
        </td>
     <td>
          <a asp-action="Editar" asp-route-id="@barra.IdBarra" class="btn btn-sm btn-warning">Editar</a>
         <a asp-action="Eliminar" asp-route-id="@barra.IdBarra" class="btn btn-sm btn-danger" 
          onclick="return confirm('¿Está seguro de eliminar esta barra?')">Eliminar</a>
       </td>
     </tr>
            }
        </tbody>
    </table>
</div>
