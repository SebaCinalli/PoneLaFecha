@model Entidades.Dj

@{
    ViewData["Title"] = "Agregar DJ";
}

<h2>Agregar Nuevo DJ</h2>

<form asp-action="Crear" method="post">
    <div class="form-group mb-3">
     <label asp-for="NombreArtistico">Nombre Artístico:</label>
        <input asp-for="NombreArtistico" type="text" class="form-control" required />
        <span asp-validation-for="NombreArtistico" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Estado">Estado:</label>
   <select asp-for="Estado" class="form-control">
   <option value="Disponible">Disponible</option>
     <option value="Reservado">Reservado</option>
   <option value="No Disponible">No Disponible</option>
        </select>
  <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

  <div class="form-group mb-3">
 <label asp-for="MontoDj">Monto:</label>
     <input asp-for="MontoDj" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="MontoDj" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Agregar DJ</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
  </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
