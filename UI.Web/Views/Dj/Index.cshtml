@model IEnumerable<Entidades.Dj>

@{
    ViewData["Title"] = "DJs";
}

<div class="container mt-4">
    <h2>Gestión de DJs</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-action="Crear" class="btn btn-primary">Agregar Nuevo DJ</a>
        </div>
    </div>

    <!-- Filtros de Precio -->
    <div class="card mb-3">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtrar por Precio</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="precioMin" class="form-label">Precio Mínimo</label>
                    <input type="number" class="form-control" id="precioMin" name="precioMin" 
                           value="@ViewBag.PrecioMin" placeholder="Ej: 20000" step="1000">
                </div>
                <div class="col-md-4">
                    <label for="precioMax" class="form-label">Precio Máximo</label>
                    <input type="number" class="form-control" id="precioMax" name="precioMax" 
                           value="@ViewBag.PrecioMax" placeholder="Ej: 200000" step="1000">
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Aplicar Filtros</button>
                    <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Mostrando:</strong> @Model.Count() DJs
        @if (ViewBag.PrecioMin != null || ViewBag.PrecioMax != null)
        {
            <span>con filtros aplicados</span>
        }
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
            <th>ID</th>
          <th>Nombre Artístico</th>
                <th>Estado</th>
       <th class="text-end">Monto</th>
     <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dj in Model)
            {
          <tr>
         <td>@dj.IdDj</td>
         <td>@dj.NombreArtistico</td>
              <td>
               <span class="badge @(dj.Estado == "Disponible" ? "bg-success" : "bg-secondary")">
      @dj.Estado
          </span>
        </td>
                    <td class="text-end">@dj.MontoDj.ToString("C")</td>
               <td>
         <a asp-action="Editar" asp-route-id="@dj.IdDj" class="btn btn-sm btn-warning">Editar</a>
          <a asp-action="Eliminar" asp-route-id="@dj.IdDj" class="btn btn-sm btn-danger" 
             onclick="return confirm('¿Está seguro de eliminar este DJ?')">Eliminar</a>
                    </td>
         </tr>
            }
        </tbody>
    </table>
</div>
