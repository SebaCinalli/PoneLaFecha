@model IEnumerable<Entidades.Zona>

@{
    ViewData["Title"] = "Zonas";
}

<h2>Gestión de Zonas</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Nueva Zona</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
          <th>ID</th>
            <th>Nombre</th>
       <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
 @foreach (var zona in Model)
        {
   <tr>
      <td>@zona.IdZona</td>
       <td>@zona.Nombre</td>
  <td>
          <a asp-action="Editar" asp-route-id="@zona.IdZona" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Detalles" asp-route-id="@zona.IdZona" class="btn btn-sm btn-info">Detalles</a>
    <a asp-action="Eliminar" asp-route-id="@zona.IdZona" class="btn btn-sm btn-danger" 
            onclick="return confirm('¿Está seguro de eliminar esta zona?')">Eliminar</a>
         </td>
            </tr>
        }
    </tbody>
</table>
