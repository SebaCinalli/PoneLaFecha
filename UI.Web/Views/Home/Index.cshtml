@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
    <div class="jumbotron bg-light p-5 rounded shadow-sm border">
  <h1 class="display-4 text-dark">Bienvenido, @ViewBag.NombreCompleto!</h1>
                <p class="lead text-dark">Sistema de Gestión de Eventos - PoneLaFecha</p>
       <hr class="my-4">
     <p class="text-muted">Panel de control para @ViewBag.Rol</p>
    </div>
     </div>
    </div>

    @if (ViewBag.Rol == "Administrador")
    {
  <div class="row mt-4">
    <div class="col-md-12">
<h3>Panel de Administrador</h3>
       <p class="text-muted">Acceso completo a todas las funcionalidades del sistema</p>
       </div>
        </div>

<div class="row mt-3">
   <div class="col-md-3 mb-3">
 <div class="card border-primary shadow-sm h-100">
        <div class="card-body text-center">
    <i class="bi bi-people-fill" style="font-size: 3rem; color: #667eea;"></i>
            <h5 class="card-title mt-3">Clientes</h5>
    <p class="card-text">Gestionar clientes</p>
         <a asp-controller="Cliente" asp-action="Index" class="btn btn-primary btn-sm">Ir</a>
            </div>
    </div>
            </div>

    <div class="col-md-3 mb-3">
   <div class="card border-success shadow-sm h-100">
<div class="card-body text-center">
    <i class="bi bi-door-open" style="font-size: 3rem; color: #28a745;"></i>
       <h5 class="card-title mt-3">Salones</h5>
     <p class="card-text">Gestionar salones</p>
 <a asp-controller="Salon" asp-action="Index" class="btn btn-success btn-sm">Ir</a>
     </div>
   </div>
       </div>

     <div class="col-md-3 mb-3">
    <div class="card border-warning shadow-sm h-100">
    <div class="card-body text-center">
    <i class="bi bi-cup-straw" style="font-size: 3rem; color: #ffc107;"></i>
      <h5 class="card-title mt-3">Barras</h5>
   <p class="card-text">Gestionar barras</p>
     <a asp-controller="Barra" asp-action="Index" class="btn btn-warning btn-sm">Ir</a>
       </div>
        </div>
     </div>

   <div class="col-md-3 mb-3">
    <div class="card border-info shadow-sm h-100">
    <div class="card-body text-center">
     <i class="bi bi-disc" style="font-size: 3rem, color: #17a2b8;"></i>
    <h5 class="card-title mt-3">DJs</h5>
    <p class="card-text">Gestionar DJs</p>
      <a asp-controller="Dj" asp-action="Index" class="btn btn-info btn-sm">Ir</a>
           </div>
     </div>
            </div>
   </div>

     <div class="row">
       <div class="col-md-3 mb-3">
     <div class="card border-danger shadow-sm h-100">
    <div class="card-body text-center">
    <i class="bi bi-egg-fried" style="font-size: 3rem; color: #dc3545;"></i>
      <h5 class="card-title mt-3">Gastronomía</h5>
    <p class="card-text">Servicios gastronómicos</p>
    <a asp-controller="Gastronomico" asp-action="Index" class="btn btn-danger btn-sm">Ir</a>
     </div>
   </div>
     </div>

      <div class="col-md-3 mb-3">
    <div class="card border-secondary shadow-sm h-100">
       <div class="card-body text-center">
    <i class="bi bi-map" style="font-size: 3rem; color: #6c757d;"></i>
    <h5 class="card-title mt-3">Zonas</h5>
       <p class="card-text">Gestionar zonas</p>
       <a asp-controller="Zona" asp-action="Index" class="btn btn-secondary btn-sm">Ir</a>
   </div>
 </div>
      </div>

     <div class="col-md-3 mb-3">
     <div class="card border-primary shadow-sm h-100">
    <div class="card-body text-center">
   <i class="bi bi-calendar-event" style="font-size: 3rem, color: #667eea;"></i>
    <h5 class="card-title mt-3">Solicitudes</h5>
    <p class="card-text">Ver todas las solicitudes</p>
    <a asp-controller="Solicitud" asp-action="Index" class="btn btn-primary btn-sm">Ir</a>
    </div>
     </div>
       </div>
  </div>
    }
    else
    {
 <div class="row mt-4">
   <div class="col-md-12">
     <h3>Panel del Cliente</h3>
     <p class="text-muted">Gestiona tus eventos y solicitudes</p>
    </div>
  </div>

       <div class="row mt-3">
   <div class="col-md-6 mb-3">
     <div class="card border-primary shadow-sm">
       <div class="card-body text-center">
    <i class="bi bi-calendar-check" style="font-size: 4rem, color: #667eea;"></i>
    <h4 class="card-title mt-3">Mis Solicitudes</h4>
    <p class="card-text">Ver y gestionar mis eventos</p>
       <a asp-controller="Solicitud" asp-action="Index" class="btn btn-primary">Ver Solicitudes</a>
 </div>
  </div>
  </div>

   <div class="col-md-6 mb-3">
    <div class="card border-success shadow-sm">
    <div class="card-body text-center">
     <i class="bi bi-plus-circle-fill" style="font-size: 4rem, color: #28a745;"></i>
    <h4 class="card-title mt-3">Nueva Solicitud</h4>
    <p class="card-text">Crear un nuevo evento</p>
    <a asp-controller="Solicitud" asp-action="Crear" class="btn btn-success">Crear Solicitud</a>
</div>
    </div>
      </div>
  </div>
    }
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
